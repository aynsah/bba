- if current_user.admin == true

  h1= @campaign.campaign_title
  p= link_to "#{@campaign.user.name}", users_index_path(current_user.id)
  br/
  h4 Komplain dari user :
  = raw @complaint.complaint
  br/
  br/
  h6 
    | Dikirim oleh : 
    = link_to "#{@complaint.user.name}", users_index_path(current_user.id)
  h7
    | Dikirim :
    = @complaint.created_at

  br/
  br/
  = link_to "Show All Complaint This Campaign", show_all_complaints_path(@campaign.id)

- else
  = controller.redirect_to campaigns_path