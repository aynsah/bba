<div class="container">
	<div class="col-lg-8">
		<div class="card">
			<div class="card-body">
				<div class="row">
					<h5>Welcome <%= @email %>!</h5>
				</div>
				
				<div class="row">
					<p>You can confirm your account email through the link below:</p>
				</div>
				
				<hr>

				<div class="row">
					<p><%= link_to 'Confirm my account', confirmation_url(@resource, confirmation_token: @token) %></p>
				</div>

				<% if $pass %>
				<div class="row">
					<p> This is Your Password </p>
				</div>

				<div class="row">
				  <p class="card-text"><%= $pass %> </p>
				 </div>
				<% end %>
			</div>
		</div>
	</div>
</div>