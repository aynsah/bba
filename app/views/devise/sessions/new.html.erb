<div class="container mt-4">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label:'Ingat saya', as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Masuk", class: "btn-primary" %>
    <%= f.button :button, "Batalkan", type: "reset", class: "btn-outline-secondary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
