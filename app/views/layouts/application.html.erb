<!DOCTYPE html>
<html>
  <head>
    <title>Bba</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_include_tag Ckeditor.cdn_url %>
    <%= stylesheet_link_tag    'https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'style.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div>
      <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <%= link_to "BBA", root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse"      aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
                <%= link_to "Home", root_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <% if current_user && current_user.admin == true %>
                  <%= link_to "Admin Dashboard", rails_admin_path, class: "nav-link" %>
                <% end %>
                <span class="sr-only">(current)</span>
            </li>
            <li class="nav-item">
                <%= link_to "Product", products_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to "Supplier", suppliers_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
                <%= link_to "Campaign", campaigns_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <% if current_user && current_user.admin == true %>
                <%= link_to "Send Mail", newsletters_path, class: "nav-link" %>
              <% end %>
            </li>
          </ul>

          <ul class="navbar-nav">
            <li class="nav-item">
              <% if current_user %>
                <%= link_to "#{current_user.name}", users_index_path(current_user.id), class: "nav-link" %>
              <% end %>
            </li>
            <li class="nav-item">
                <% if current_user %>
                  <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" %>
                <% else %> 
                  <%= link_to "Login", new_user_session_path, class: "btn btn-outline-success" %>
                <% end %>
            </li>
          </ul>
        </div>
      </nav>
    </div>

    <div>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    </div>
    <div>
      <%= yield %>
    </div>
  </body>
</html>
